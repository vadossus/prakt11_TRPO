<Window x:Class="PacientApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Окно приема пациента" Height="722" Width="1021"
        Background="{DynamicResource WindowBackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="Файл" Foreground="White">
                <MenuItem Header="Выход" Click="ExitMenuItem_Click" Foreground="{StaticResource TextMenuBrush}"/>
            </MenuItem>
            <MenuItem Header="Настройки" Foreground="White">
                <MenuItem Header="Сменить тему" Click="ChangeThemeMenuItem_Click" Foreground="{StaticResource TextMenuBrush}"/>
            </MenuItem>
            <MenuItem Header="Помощь" Foreground="White">
                <MenuItem Header="О программе" Click="AboutMenuItem_Click" Foreground="{StaticResource TextMenuBrush}"/>
            </MenuItem>
        </Menu>

        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Grid.Row="1"/>

        <StatusBar Grid.Row="2" Background="{DynamicResource PrimaryBrush}">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Готов к работе" Foreground="{DynamicResource PrimaryTextBrush}"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock x:Name="SystemInfoText" Text="Пользователи: 0 | Пациенты: 0" Foreground="{DynamicResource PrimaryTextBrush}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>