<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="PrimaryColor">#1E2A32</Color>
    <Color x:Key="PrimaryHoverColor">#b85318</Color>
    <Color x:Key="PrimaryPressedColor">#eb7936</Color>

    <Color x:Key="SuccessColor">#beeb36</Color>
    <Color x:Key="SuccessHoverColor">#a5cc31</Color>
    <Color x:Key="SuccessPressedColor">#98bd2b</Color>

    <Color x:Key="DangerColor">#E65A4F</Color>
    <Color x:Key="DangerHoverColor">#850d31</Color>
    <Color x:Key="DangerPressedColor">#5c0721</Color>

    <Color x:Key="WindowBackground">#1E2A32</Color>
    <Color x:Key="TextColor">#E4E8EB</Color>
    <Color x:Key="BorderColor">#3C4D55</Color>

    <Color x:Key="CBackground">#2A3C46</Color>
    <Color x:Key="HeaderText">#D6F4FF</Color>

    <Color x:Key="PrimaryText">#E4E8EB</Color>
    <Color x:Key="SecondaryText">#A1B4BF</Color>
    <Color x:Key="PrimaryButton">#3388B1</Color>
    
    <Color x:Key="InputBackground">#324650</Color>
    <Color x:Key="Accent">#4FC3C7</Color>
    <Color x:Key="EBackground">#3B1E1E</Color>
    <Color x:Key="EText">#FFB3B3</Color>

    <Color x:Key="TextMenu">#808080</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{DynamicResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryHoverBrush" Color="{DynamicResource PrimaryHoverColor}"/>
    <SolidColorBrush x:Key="PrimaryPressedBrush" Color="{DynamicResource PrimaryPressedColor}"/>

    <SolidColorBrush x:Key="SuccessBrush" Color="{DynamicResource SuccessColor}"/>
    <SolidColorBrush x:Key="SuccessHoverBrush" Color="{DynamicResource SuccessHoverColor}"/>
    <SolidColorBrush x:Key="SuccessPressedBrush" Color="{DynamicResource SuccessPressedColor}"/>

    <SolidColorBrush x:Key="DangerBrush" Color="{DynamicResource DangerColor}"/>
    <SolidColorBrush x:Key="DangerHoverBrush" Color="{DynamicResource DangerHoverColor}"/>
    <SolidColorBrush x:Key="DangerPressedBrush" Color="{DynamicResource DangerPressedColor}"/>

    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{DynamicResource WindowBackground}"/>
    <SolidColorBrush x:Key="TextBrush" Color="{DynamicResource TextColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{DynamicResource BorderColor}"/>

    <SolidColorBrush x:Key="CBackgroudBrush" Color="{DynamicResource CBackground}"/>
    
    <SolidColorBrush x:Key="HeaderTextBrush" Color="{DynamicResource HeaderText}"/>
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{DynamicResource PrimaryText}"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{DynamicResource SecondaryText}"/>
    
    <SolidColorBrush x:Key="PrimaryButtonBrush" Color="{DynamicResource PrimaryButton}"/>
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="{DynamicResource InputBackground}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{DynamicResource Accent}"/>
    <SolidColorBrush x:Key="EBackgroundBrush" Color="{DynamicResource EBackground}"/>
    <SolidColorBrush x:Key="ETextBrush" Color="{DynamicResource EText}"/>

    <SolidColorBrush x:Key="TextMenuBrush" Color="{DynamicResource TextMenu}"/>
</ResourceDictionary>